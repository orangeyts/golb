<!-- 组件调用方法 <t:layout.main -->
<t:layout.main xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
	<t:grid source="addresses"/>
	
	<div>
		<p>
			集成 tapestry Hibernate
		</p>
		<t:form>
			<div>
				姓名：
				<t:textfield t:value="address.firstName" />
			</div>
			<div>
				城市：
				<t:textfield t:value="address.city" />
			</div>
			<div>
				<t:submit value="添加" />
			</div>
		</t:form>
	</div>
</t:layout.main>