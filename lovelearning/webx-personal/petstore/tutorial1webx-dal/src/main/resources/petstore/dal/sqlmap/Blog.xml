<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="Blog">
    <typeAlias alias="blog" type="com.alibaba.sample.petstore.dal.dataobject.Blog" />
    
     <!--
      - ===============================================
      - blog resultMap
      - ===============================================
     -->
    <resultMap id="blogResult" class="blog">
        <result property="id" column="BLOG_ID" />
        <result property="title" column="TITLE" />
        <result property="content" column="CONTENT" />
        <result property="userId" column="USER_ID" />
    </resultMap>
    
    <!--
      - ===============================================
      - 查找blog List
      - ===============================================
     -->
    <select id="getBlogList" resultMap="blogResult"><![CDATA[
        select
                Blog.*
        from
                Blog
    ]]></select>
    
    <!--
      - ===============================================
      - 通过blogId查找blog
      - ===============================================
     -->
    <select id="getBlogByBlogId" parameterClass="int" resultMap="blogResult"><![CDATA[
        select
                Blog.*
        from
                Blog
        where
                Blog.BLOG_ID = #blogId#
    ]]></select>
    <!--
      - ===============================================
      - 创建一个blog对象
      - ===============================================
     -->
    <insert id="insertBlog" parameterClass="blog"><![CDATA[
        insert into BLOG (
                BLOG_ID,
                TITLE,
                CONTENT,
                USER_ID
        ) values (
                #id#,
                #title#,
                #content#,
                #userId#
        )
    ]]></insert>
    <!--
      - ===============================================
      - 更新一个user对象
      - ===============================================
     -->
    <update id="updateBlog" parameterClass="blog"><![CDATA[
        update
                BLOG
        set
                CONTENT = #content#
        where
                BLOG_ID = #id#
    ]]></update>
</sqlMap>
